<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/cardview_light_background"
        app:cardElevation="@dimen/_100sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poster_image_view_movie_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                />


            <TextView
                android:typeface="monospace"
                android:id="@+id/movie_name_text_view_movie_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/poster_image_view_movie_item"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="asdasdasd"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp" />


            <TextView
                android:id="@+id/year_text_view_movie_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_name_text_view_movie_item"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="asdasd"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>